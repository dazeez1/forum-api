      "item": [
        {
          "name": "6.1 GraphQL - Get All Threads",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"{ threads(page: 1, limit: 10) { threads { _id title content author { name email role } category tags views likes dislikes commentCount createdAt updatedAt } pagination { current pages total } } }\"\n}"
            },
            "url": {
              "raw": "https://forum-api-cfmd.onrender.com/graphql",
              "protocol": "https",
              "host": ["forum-api-cfmd", "onrender", "com"],
              "path": ["graphql"]
            },
            "description": "GraphQL query to get all threads with full details"
          }
        },
        {
          "name": "6.2 GraphQL - Get Thread by ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query GetThread($id: ID!) { thread(id: $id) { _id title content author { name email role } category tags views likes dislikes commentCount createdAt updatedAt } }\",\n  \"variables\": {\n    \"id\": \"{{threadId}}\"\n  }\n}"
            },
            "url": {
